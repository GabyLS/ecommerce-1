
{{!-- {{#if validos}}
    <td>Válido</td>
    {{else}}
    <td>No válido</td>
    {{/if}}
 --}}
{{#if productos.length}}
    <table>
        <tr>
            {{!-- <th>id</th> --}}
            <th>Nombre</th>
            <th>Precio</th>
            <th>Stock</th>
            <th>Marca</th>
            <th>Categoria</th>
            <th>Foto</th>
            <th>Detalles</th>
            <th>Envio</th>
            <th>Acción</th>
        </tr>
        {{#each productos}}
        <tr>
            {{!-- <td>{{id}}</td> --}}
            <td>{{nombre}}</td>
            <td>{{precio}}</td>
            <td>{{stock}}</td>
            <td>{{marca}}</td>
            <td>{{categoria}}</td>
            <td>
                <img src="{{foto}}" width="50" alt="{{nombre}}"> 
            </td>
            <td>{{detalles}}</td>
            {{#if envio}}
            <td>Sí</td>
            {{else}}
            <td>No</td>
            {{/if}}
             <td>
                    {{#if ../validos}}
                        <button onclick="productoController.actualizarProducto('{{id}}')">Actualizar</button>
                    {{else}}
                        <button disabled onclick="productoController.actualizarProducto('{{id}}')">Actualizar</button>
                    {{/if}}
                    <button onclick="productoController.borrarProducto('{{id}}')">Borrar</button>
                </td>
        </tr>
        {{/each}}

    </table>
    {{else}}
    <h3>No se encontraron productos</h3>
{{/if}}